            <div class="card text-end">
              <div class="card-body">
               
                <h5 class="card-title"><%= car.type%></h5>
                <p><%= car.location%></p>
                
                <p class="d-inline d-flex flex-row">
                  <img swidth="150" height="150" src = "<%= car.img_URL%>" />
                </p>
                <p>
                  <span class="badge bg-light text-dark"> ريال <%= car.price%> </span>
                </p>
                <p > 
                <a
                  href="<%=  '/cars/show/'  + car.id %>"
                  class="btn btn-success"
                  >المزيد</a
                >
                </p>
              </div>
            </div>
          </div>
          <%})%>
        </div>
        <%})%>
      </div>
    </div>
    
  </div>
</div>
