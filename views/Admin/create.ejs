<%- include('../partials/header') -%> <%- include('../partials/navbarAdmin') -%>
<div class="container">
  <div class="row mt-4">
    <div class="col-md-9 offset-md-1 text-center">
      <h1 class="display-4 text-center">انشاء جديد</h1>
      <hr />
      <%-include('../partials/flashMessage') -%>
      <form action="/admin/create" method="post">
        <div class="form-group col-md-5 offset-md-4">
          <label for="type">النوع</label>
          <input type="text" name="type" id="type" class="form-control" />
        </div>

        <div class="form-group col-md-5 offset-md-4">
          <label for="description">الوصف</label>
          <input
            type="text"
            name="description"
            id="description"
            class="form-control"
          />
        </div>

        <div class="form-group col-md-5 offset-md-4">
          <label for="price">السعر</label>
          <input type="text" name="price" id="price" class="form-control" />
        </div>

        <div class="form-group col-md-5 offset-md-4">
          <label for="location">الموقع</label>
          <input
            type="text"
            name="location"
            id="location"
            class="form-control"
          />
        </div>

        <div class="form-group col-md-5 offset-md-4 mt-4">
          <button type="submit" class="btn btn-primary">تسجيل</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
