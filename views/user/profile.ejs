<%- include('../partials/header') -%> <%- include('../partials/navbar') -%>
<div class="container">
  <div class="row mt-4">
    <div class="col-md-15">
      <h1 class="display-4 text-center">الملف الشخصي</h1>
      <hr />

      <%- include('../partials/flashMessage') -%>
      <h3 class="text-center"><% if (user) { %> welcome .. your email <%= user.email%> <%}%></h3>

      <hr />
      <div class="container">
        <h5 class="text-center"></h5>
        <% chunk.forEach((cars)=> {%>
          <div class="row mt-3 ms">
          <% cars.forEach((car)=> {%>
            <div class="col-sm-6 col-md-4">
              <div class="card text-end">
                <div class="card-body">
                      <h5 class="card-title"><%= car.type%></h5>
                      <p class="card-text"><%=car.description%></p>
                      <p><%= car.location%></p>
                      
                      <p>
                        <span class="badge bg-light text-dark"> ريال <%= car.price%> </span>
                      </p>
                      
                    </div>
                  </div>
                </div>
                <%})%>
              </div>
              <%})%>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
